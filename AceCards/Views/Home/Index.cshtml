@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="container-fluid" ng-controller="DataController">
        <!--START CARD ROW1-->
        <div class="card-deck">
            <!--CARD1 Budget-->
            <div class="card effect_flip">
                <div class="card_front">
                    <div class="card-header badge-danger">
                        {{Data.Goal_1.Title_Label}}
                    </div>
                    <div class="card-block">
                        <div>
                            <canvas id="Canvas-Budget"></canvas>
                        </div>
                        <div class="card-footer">
                            <div>STATUS: &nbsp;<span class="bold">{{(100*data.Budget_Status.Current/data.Budget_Status.Goal)| number:0}}%</span></div>
                            <div>CURRENT: &nbsp;<span class="bold">{{data.Budget_Status.Current | currency:"$":0}}</span></div>
                            <div>GOAL: &nbsp;<span class="bold">{{data.Budget_Status.Goal | currency:"$":0}}</span></div>
                        </div>
                    </div>
                </div>
                <!-- CARD1 Details-->
                <div class="card_back">
                    <div class="card-header badge-danger">
                        Budget Details
                    </div>
                    <div class="card-block">
                        <i>Budget Goal - Be Favorable to Operating Budget</i>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Q1</th>
                                    <th scope="col">Q2</th>
                                    <th scope="col">Q3</th>
                                    <th scope="col">Q4</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>86</td>
                                    <td>23</td>
                                    <td>87</td>
                                    <td>34</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--END CARD! Details-->
            </div>
            <!--END CARD1 Budget -->
            <!--CARD2 PROJECTS_CLOSED-->
