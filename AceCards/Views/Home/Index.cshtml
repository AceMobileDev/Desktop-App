                                    <th scope="col">Q2</th>
                                    <th scope="col">Q3</th>
                                    <th scope="col">Q4</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>86</td>
                                    <td>23</td>
                                    <td>87</td>
                                    <td>34</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--END CARD1 DETAILS-->
            </div>
            <!--END CARD2 PROJECTS CLOSED-->
            <!--CARD3 EFFICIENCY_HOURS_SAVED-->
